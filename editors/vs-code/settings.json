{
  "update.mode": "default",
  /* Window */
  "window.zoomLevel": 1.2,
  "window.title": "${dirty} ${rootName}${separator}${separator}${activeEditorShort}",
  "window.commandCenter": false,
  "window.newWindowDimensions": "inherit",
  /* Workbench */
  "workbench.tips.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.showTabs": "multiple",
  "workbench.layoutControl.enabled": false,
  /* Controls the location of the activity bar. Hides the menu of icons */
  "workbench.activityBar.location": "hidden",
  "workbench.tree.indent": 12,
  /* Controls whether the tree should render indent guides. */
  "workbench.tree.renderIndentGuides": "always",
  /* Controls whether the panel opens maximized. It can either always open maximized,
     never open maximized, or open to the last state it was in before being closed. */
  "workbench.panel.opensMaximized": "never",
  /* Determines which settings editor to use by default. */
  "workbench.settings.editor": "json",
  "workbench.list.smoothScrolling": true,
  "workbench.colorCustomizations": {
    /* Hide statusBarItem */
    "statusBarItem.remoteForeground": "#1F2430",
    "statusBarItem.remoteBackground": "#707a8c",
    /* little overrides for fosk */
    "editorBracketHighlight.foreground1": "#cbccc699",
    "editorBracketHighlight.foreground2": "#cbccc699",
    "editorBracketHighlight.foreground3": "#cbccc699",
    "editorBracketHighlight.foreground4": "#cbccc699",
    "editorBracketHighlight.foreground5": "#cbccc699",
    "editorBracketHighlight.foreground6": "#cbccc699",
  },
  /* Controls which editor is shown at startup */
  "workbench.startupEditor": "none",
  "workbench.fontAliasing": "antialiased",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Fosk",
  "material-icon-theme.folders.theme": "specific",
  "workbench.editor.enablePreview": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.statusBar.visible": true,
  /* Explorer */
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,
  "explorer.compactFolders": false,
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true,
  /* Files */
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.esy": true
  },
  "files.watcherExclude": {
    "**/.esy": false,
    "**/_opam": false,
    "**/.DS_Store": true,
    "node_modules": false,
    "**/Thumbs.db": true,
    "**/.git": false
  },
  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.js": "javascriptreact",
    "*.mly": "ocaml.menhir",
    "*.mlx": "ocaml"
  },
  /* Search */
  "search.mode": "reuseEditor",
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "search.exclude": {
    "**/_build": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true,
    "**/.vscode": true,
    "**/_esy": true,
    "**/build": true,
    "**/esy.lock": true,
    "**/_opam": true,
    "**/.next": true
  },
  /* Breadcrumbs */
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.icons": false,
  /* Keyboard */
  "keyboard.dispatch": "keyCode",
  /* Editor */
  "editor.fontFamily": "JetBrains Mono, Ligalex Mono, IBM Plex Mono, Martian Mono, Monaco",
  "editor.codeLensFontSize": 16,
  "editor.codeLensFontFamily": "JetBrains Mono, Ligalex Mono, IBM Plex Mono, Martian Mono, Monaco",
  "editor.fontLigatures": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,
  "editor.fontSize": 15,
  "editor.fontWeight": 400,
  "editor.wordWrap": "on",
  "editor.folding": true,
  "editor.glyphMargin": false,
  "editor.renderWhitespace": "boundary",
  "editor.wrappingIndent": "indent",
  "editor.cursorStyle": "block",
  "editor.columnSelection": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSaveMode": "file",
  "editor.inlineSuggest.enabled": true,
  "editor.renderLineHighlight": "none",
  "editor.lightbulb.enabled": "off",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.occurrencesHighlight": "singleFile",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[]{}\\\\|;:'\\\",.<>/?",
  "editor.lineHeight": 2,
  "editor.bracketPairColorization.enabled": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.renderControlCharacters": true,
  "editor.useTabStops": false,
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.snippetSuggestions": "bottom",
  "editor.cursorBlinking": "phase",
  "editor.hover.enabled": true,
  "editor.hover.above": true,
  "editor.hover.sticky": true,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.tabCompletion": "on",
  "editor.stickyScroll.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.accessibilitySupport": "off",
  "editor.scrollPredominantAxis": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "’": true,
    "‹": true,
    "›": true,
    "–": true
  },
  "editor.suggestFontSize": 16,
  "editor.suggest.insertMode": "replace",
  "editor.autoIndent": "none",
  "editor.colorDecorators": false,
  "editor.linkedEditing": true,
  "editor.suggest.showIcons": true,
  "editor.lineNumbers": "on",
  /* scm */
  "scm.diffDecorationsGutterVisibility": "always",
  "scm.alwaysShowActions": true,
  "scm.diffDecorations": "all",
  /* Terminal */
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.defaultLocation": "view",
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.explorerKind": "external",
  "terminal.integrated.env.osx": {},
  "security.workspace.trust.untrustedFiles": "open",
  /* Language specific */
  /* HTML */
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "html.format.indentInnerHtml": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  /* Makefile */
  "makefile.configureOnOpen": true,
  /* TypeScript */
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.parameterTypes.enabled": true,
  /* JavaScript */
  "js/ts.implicitProjectConfig.strictNullChecks": true,
  "eslint.validate": [
    "javascriptreact",
    "javascript",
    "typescript",
    "typescriptreact",
  ],
  "eslint.enable": true,
  "eslint.format.enable": true,
  "[typescript][typescriptreact][javascript][javascriptreact][json][jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.ts": "always"
    }
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  /* OCaml */
  "ocaml.dune.autoDetect": true,
  "ocaml.server.codelens": true,
  "ocaml.server.extendedHover": true,
  "[dune][ocaml.interface][ocaml.opam][ocaml.menhir][ocaml.ocamlformat]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ocamllabs.ocaml-platform"
  },
  "[ocaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ocamllabs.ocaml-platform"
  },
  /* ReScript */
  "[rescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "chenglou92.rescript-vscode"
  },
  /* JSON */
  "[json][jsonc]": {
    "editor.autoIndent": "full",
    "editor.formatOnPaste": false,
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.formatOnSave": true,
    "editor.suggest.insertMode": "replace"
  },
  /* Reason */
  "[reason]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ocamllabs.ocaml-platform"
  },
  "[cram]": {
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": false
  },
  /* Extensions */
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  /* Error Lens */
  "errorLens.scrollbarHackEnabled": false,
  "errorLens.enabled": true,
  "errorLens.padding": "0",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.removeLinebreaks": false,
  "errorLens.fontWeight": "400",
  /* GitLens */
  "git.decorations.enabled": true,
  "gitlens.mode.active": "review",
  "gitlens.codeLens.scopes": [],
  "gitlens.hovers.avatars": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": true,
  "gitlens.statusBar.enabled": true,
  "gitlens.currentLine.format": "${message|50?} ${'in 'pullRequest}• ${agoOrDate} by ${author}",
  "gitlens.currentLine.uncommittedChangesFormat": "${message|50?} ${'in 'pullRequest}• ${agoOrDate}",
  /* Emmet */
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  /* Remote */
  "remote.SSH.remotePlatform": {
    "nspawn": "linux"
  },
  "remote.SSH.useLocalServer": false,
  "remote.SSH.remoteServerListenOnSocket": true,
  "remote.SSH.configFile": "/Users/davesnx/.ssh/config",
  /* Apc Customize UI++ */
  "apc.font.family": "JetBrains Mono, Ligalex Mono, IBM Plex Mono, Martian Mono, Monaco",
  "apc.header": {
    "height": 40,
    "fontSize": 15
  },
  "apc.listRow": {
    "height": 23,
    "fontSize": 13
  },
  "apc.electron": {
    "titleBarStyle": "hidden"
  },
  /* Go to next error */
  "go-to-next-error.multiSeverityHandlingMethod": "hover",
  /* AI */
  "github.copilot.enable": {
    "*": true
  }
}
