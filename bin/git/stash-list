#!/usr/bin/env bash

set -euo pipefail

source "$DOTFILES_PATH/scripts/core/_main.sh"

##? Find stashes
#?? 1.0.0
##?
##? Usage:
##?    git-stashl

git stash list "$@" --color=always |
  fzf --ansi --no-sort \
    --preview="echo {} | cut -d':' -f1 | xargs git stash show -p --color=always | sed 1,2d" |
  awk '{print "git stash apply "$1}' | sed 's/.$//'
